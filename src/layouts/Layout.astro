---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Mario from "../components/Mario.astro";
import GameElements from "../components/GameElements.astro";
interface Props {
  title: string;
  score?: number;
  coins?: number;
  world?: string;
  lives?: number;
  time?: number;
}

const {
  title,
  score = 999999,
  coins = 999,
  world = "1-1",
  lives = 3,
  time = 400,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&display=swap"
      rel="stylesheet"
    />

    <meta
      name="description"
      content="Tribute to Super Mario Bros in 8-bit style"
    />
  </head>
  <body class="min-h-screen mario-bg">
    <Header
      score={score}
      coins={coins}
      world={world}
      lives={lives}
      time={time}
    />

    <div class="mario-world-container">
      <div class="mario-world-stage">
        <div style="position: absolute; left: 100px; bottom: 120px;">
          <Mario />
        </div>

        <!-- Floating coins -->
        <GameElements element="coin" position="floating" x={200} />
        <GameElements element="coin" position="floating" x={250} />
        <GameElements element="coin" position="floating" x={300} />

        <!-- Brick blocks -->
        <GameElements element="block" position="floating" x={180} />
        <GameElements element="block" position="floating" x={220} />
        <GameElements element="block" position="floating" x={260} />

        <!-- Mushroom on ground -->
        <GameElements element="mushroom" position="ground" x={400} />

        <!-- Star at high level -->
        <GameElements element="star" position="high" x={500} />

        <!-- Fire flower -->
        <GameElements element="flower" position="floating" x={600} />

        <!-- Flag at the end -->
        <GameElements element="flag" position="ground" x={1000} size="large" />

        <!-- More distributed elements -->
        <GameElements element="coin" position="ground" x={350} />
        <GameElements element="coin" position="ground" x={450} />
        <GameElements element="block" position="ground" x={700} />
        <GameElements element="mushroom" position="floating" x={800} />
      </div>
    </div>

    <!-- Main content -->
    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-black text-white text-center p-4 font-pixel">
      <p>&copy; 2024 Mario 8-bit Tribute - Made with ❤️ & nostalgia</p>
    </footer>
  </body>
</html>

<!-- Global styles -->

<style is:global>
  .mario-bg {
    background: linear-gradient(
      180deg,
      #87ceeb 0%,
      #87ceeb 60%,
      #228b22 60%,
      #228b22 100%
    );
    background-attachment: fixed;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .font-pixel {
    font-family: "Orbitron", monospace;
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
  }

  html {
    font-family: "Orbitron", monospace;
  }
</style>
