<style>
  .pixel-shadow {
    text-shadow:
      4px 4px 0px #000,
      8px 8px 0px rgba(0, 0, 0, 0.3);
  }

  .mario-coin {
    width: 24px;
    height: 24px;
    background: radial-gradient(circle, #ffd700 30%, #ffa500 70%);
    border: 2px solid #000;
    border-radius: 50%;
    display: inline-block;
  }

  .animate-spin-slow {
    animation: spin 3s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .timeline-section {
    text-align: center;
    margin: 4rem 0;
  }

  .timeline-header {
    background: linear-gradient(45deg, #1a1a1a, #2d2d2d);
    padding: 2rem;
    border-radius: 1rem;
    border: 3px solid #ffd700;
    margin-bottom: 2rem;
  }

  .timeline-item {
    position: relative;
    margin: 2rem 0;
    width: 45%;
  }

  .timeline-item.left {
    left: 0;
  }

  .timeline-item.right {
    left: 55%;
  }

  .timeline-item.highlight {
    transform: scale(1.05);
  }

  .timeline-content {
    background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
    padding: 1.5rem;
    border-radius: 1rem;
    border: 3px solid;
    position: relative;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .era-80s {
    border-color: #ff6b6b;
  }
  .era-90s {
    border-color: #4ecdc4;
  }
  .era-2000s {
    border-color: #45b7d1;
  }
  .era-2010s {
    border-color: #f9ca24;
  }
  .era-2020s {
    border-color: #6c5ce7;
  }
  .era-future {
    border-color: #a29bfe;
  }

  .timeline-year {
    font-size: 3rem;
    font-weight: bold;
    color: #ffd700;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 0 #000;
  }

  .timeline-year.legendary {
    color: #ff6b6b;
    animation: glow 2s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      text-shadow:
        2px 2px 0 #000,
        0 0 10px #ff6b6b;
    }
    to {
      text-shadow:
        2px 2px 0 #000,
        0 0 20px #ff6b6b,
        0 0 30px #ff6b6b;
    }
  }

  .game-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    filter: drop-shadow(2px 2px 0 #000);
  }

  .game-icon.legendary {
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  .game-stats {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .stat-badge {
    background: #333;
    color: #ffd700;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
